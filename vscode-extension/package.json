{
  "name": "code-butler",
  "displayName": "Code Butler",
  "description": "Code Butler for C# files to clean up your code.",
  "version": "2.2.1",
  "publisher": "just-seba",
  "homepage": "https://github.com/just-seba/code-butler",
  "repository": {
    "type": "git",
    "url": "https://github.com/just-seba/code-butler.git"
  },
  "bugs": {
    "url": "https://github.com/just-seba/code-butler/issues"
  },
  "license": "MIT",
  "icon": "assets/code-butler.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:csharp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.code-butler.cleanup",
        "title": "Code Butler: Cleanup C# file",
        "shortTitle": "Clean C# file"
      }
    ],
    "keybindings": [
      {
        "command": "extension.code-butler.cleanup",
        "key": "ctrl+m ctrl+space",
        "when": "!isMac"
      },
      {
        "command": "extension.code-butler.cleanup",
        "key": "cmd+m cmd+space",
        "when": "isMac"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.code-butler.cleanup",
          "group": "1_modification@100",
          "when": "editorLangId == 'csharp'"
        }
      ]
    },
    "configuration": {
      "title": "Code Butler",
      "properties": {
        "code-butler.cleanupOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Run code cleanup on save."
        },
        "code-butler.sortMembersByAlphabet": {
          "type": "boolean",
          "default": true,
          "description": "Sort members by alphabet."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "_markdown": "cp -f ../README.md README.md && cp -f ../CHANGELOG.md CHANGELOG.md && cp -f ../LICENSE LICENSE"
  },
  "devDependencies": {
    "@types/vscode": "^1.87.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9"
  }
}
